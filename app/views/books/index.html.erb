<div class="container-fluid d-flex gap-5 flex-wrap justify-content-center mt-5">
  <% @books.each do |book| %>
    <div class="book-container d-flex p-3 gap-3">
      <div class="poster-container" style="background-image: url(<%= book.poster_url %>)"></div>
      <div class="details-container">
        <div class="header">
          <h4 class="card-title mb-2"><%= book.title %></h4>
          <h6 class="card-subtitle mb-4 text-muted"><%= book.author %></h6>
        </div>
        <p class="overview"><%= book.overview %></p>
        <%= link_to("Read More", book_path(book), class: "btn-flat") %>
      </div>
    </div>
  <% end %>
</div>

