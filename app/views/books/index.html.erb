<div class="container-fluid d-flex gap-5 flex-wrap justify-content-center">
  <% @books.each do |book| %>
    <div class="card shadow-sm rounded" style = "width:350px;">
      <img src="<%= book.poster_url %>", class="card-img-top" />
      <div class="card-body">
        <h4 class="card-title"><%= book.title %></h4>
        <h6 class="card-subtitle mb-2 text-muted"><%= book.author %></h6>
        <p class=""><%= book.overview %></p>
      </div>
      <%= link_to("Read More", book_path(book), class: "btn btn-primary") %>
    </div>
  <% end %>
</div>

