<%= link_to("Back to book", book_path(@book), class: "mt-3 ms-3 mb-5 btn btn-dark") %>
<% if @existed_rent %>
  <h1 class = "text-center heading-two mb-4"><%= @book.title %>'s Chef</h1>

  <div class="page-content-container">
    <div class = "book-poster" style="background-image: url(<%= @book.poster_url %>)"></div>
    <div class="reading-container">
      <% @content.split("\n").each do |para| %>
        <p class = "mb-4"><%= para %></p>
      <% end %>
    </div>
  </div>
<% else %>
  <h1>You are not subscribed to this book</h1>
<% end %>